html
  head
    title InputTable
  body
    link(rel="stylesheet",type="text/css",href="/style.css")
    include include/head.pug
    
    
    table(class="standard")
        tr
            each val in plans.header
                th=val
        each val in plans.body
            tr
                each val2 in val
                    td
                        if (val2===null)
                            ='.'
                        else if (typeof val2 == 'string') 
                            =val2
                        else
                            a(href='/plans/'+val2[0])=val2[1]

                        if (typeof val2 != 'string') 
                            if val2[0]==null
                                input
    table(class="standard")
      tr
        th name    
        th status
        th
      each val, index in plans
        tr
          td
            if val['status']!=-1
              a(href='/plans/'+val['group_plan_id'])=val['name']
            else
              =val['name']
          if val['status']==0
            td open
          if val['status']==1
            td locked/ready
          if val['status']==-1
            td not created
          td
            if val['status']==-1
              form(method='POST', action='create_plan')
                input(type='hidden', name='id', value=val['group_plan_id'])
                input(type='submit', value='create')
          